{
  "name": "yt-backend",
  "version": "1.0.0",
  "description": "YouTube downloader REST API backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install --production && npm run pm2:restart",
    "pm2:start": "pm2 start server.js --name yt-backend",
    "pm2:restart": "pm2 restart yt-backend || npm run pm2:start",
    "pm2:stop": "pm2 stop yt-backend",
    "pm2:delete": "pm2 delete yt-backend",
    "pm2:logs": "pm2 logs yt-backend",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "deploy": "npm install --production && npm run pm2:restart && npm run pm2:save",
    "pm2:save": "pm2 save",
    "clean": "rm -rf downloads/* node_modules",
    "clean:downloads": "rm -rf downloads/*"
  },
  "dependencies": {
    "express": "^4.18.2",
    "youtube-search-api": "^1.2.1",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}